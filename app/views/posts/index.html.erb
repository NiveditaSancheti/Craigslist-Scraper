<!-- <h1>Listing posts</h1>
 -->
   <div class="container">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Heading</th>
        <!--<th>Body</th>-->
        <th>Price</th>
        <th>State</th>
        <th>City</th>
        <th>Neighborhood</th>
        <th>Zip</th>
        <th>Phone</th>
        <th>Drive</th>
        <th>Year</th>
        <th>Color</th>
        <th>Flagged </th>
        <!--<th>External url</th>-->
        <th>Timestamp</th>
        <th>Last Updated</th>
        
        <!--<th colspan="3"></th>-->
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr style="background-color:<%= post.flagged_status==1? "red" : "white" %>;" >
          <td><%= link_to post.heading, post %></td>
          <!--<td><%= post.body %></td>-->
          <td><%= number_to_currency(post.price, precision:0) %></td>
          <td><%= post.state %></td>
          <td><%= post.city %></td>
          <td><%= post.neighborhood %></td>
          <td><%= post.zipcode %></td>
          <td><%= post.phone %></td>
          <td><%= post.drive %></td>
          <td><%= post.year %></td>
          <td><%= post.paint_color %></td>
          <td><%= post.flagged_status %></td>
          <!--<td><%= post.external_url %></td>-->
          <td><%= Time.at(post.timestamp.to_i) %></td>
          <td><%= "#{time_ago_in_words(Time.at(post.timestamp.to_i))} ago" %></td>
          <!--<td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- <%= will_paginate @posts%>  will paginate without formatting -->
   <%= will_paginate @posts,renderer: BootstrapPagination::Rails %> <!-- @posts should be same as controller-->
 
  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
