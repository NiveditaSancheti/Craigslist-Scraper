<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Heading : </strong>
    <%= @post.heading %>
  </p>

  <p>
    <strong>Body : </strong>
    <%= @post.body %>
  </p>

  <p>
    <strong>Price : </strong>
    <%= @post.price %>
  </p>

  <p><strong>State : </strong><%= @post.state %></p>
  <p><strong>City : </strong><%= @post.city %></p>
  <p><strong>Neighbourhood : </strong><%= @post.neighborhood %></p>
  <p><strong>Zip : </strong><%= @post.zipcode %></p>
  <p><strong>Phone : </strong><%= @post.phone %></p>
  <p><strong>Color : </strong><%= @post.paint_color %></p>
  <p><strong>Drive : </strong><%= @post.drive %></p>
  <p><strong>Year : </strong><%= @post.year %></p>
  <p><strong>Flagged Status : </strong><%= @post.flagged_status %></p>
   <p><strong>Fuel : </strong><%= @post.fuel_vehicle %></p>
   <p><strong>Make : </strong><%= @post.make_vehicle %></p>
   <p><strong>Model : </strong><%= @post.model_vehicle %></p>
   <p><strong>Title Status : </strong><%= @post.title_status %></p>
   <p><strong>Transmission : </strong><%= @post.transmission %></p>
   <p><strong>Rating : </strong><div class="star-rating" data-score= <%= @post.rating %> ></div></p>
   <p><strong>Mileage : </strong><%= @post.mileage %></p>
   <p><strong>Source : </strong><%= @post.account_id %></p>
   <p><strong>Location : </strong><%= @post.source_map_google %></p>
   <div class="carousel" id="carousal">
    <% @images.each do |image| %>
        <%= image_tag image.url %>
      <% end %>
  </div>
  <p>
    <strong>External url : </strong>
    <%= @post.external_url %>
  </p>

  <p>
    <strong>Timestamp : </strong>
    <%= @post.timestamp %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>

<script>
 $('.star-rating').raty({
    path: '/assets',
    readOnly:true,
    score: function() {
      return $(this).attr('data-score');
    }
  });

  $('#carousal').cycle({
      fx:      'scrollLeft',
      next:   '#carousal',
      timeout:  3000,
      easing:  'easeInOutBack'
  });



</script>
