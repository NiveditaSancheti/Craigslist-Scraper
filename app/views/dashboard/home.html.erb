<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"%>
<%= javascript_include_tag "highcharts" %>
<script src="http://code.highcharts.com/modules/exporting.js"></script>

<div id="containerbar" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>
<br/>
<div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>


<h1>Dashboard</h1>
<p>Get you recent trendsss.........</p>

<div id="orders_chart" style="width: 300px; height: 350px;"></div>


<br/>


<%= form_tag posts_path, method: :get do %>
<table>
<% @posts.each do |year , count_all| %>

<tr>

 <td class="center" style="vertical-align:middle">

    <%= year %> ---- <%= count_all %>

   </td>
</tr>
<% end %>

</table>
